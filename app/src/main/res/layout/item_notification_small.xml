<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_notification_small_lpa">

    <ImageView
        android:id="@+id/iv_fast_rewind"
        android:layout_width="@dimen/item_notification_small_fast_rewind_width"
        android:layout_height="@dimen/item_notification_small_fast_rewind_height"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_fast_rewind_white" />

    <ImageView
        android:id="@+id/iv_skip_previous"
        android:layout_width="@dimen/item_notification_small_skip_previous_width"
        android:layout_height="@dimen/item_notification_small_skip_previous_height"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_skip_previous_white" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/item_notification_small_play_width"
        android:layout_height="@dimen/item_notification_small_play_height"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_play_arrow_white" />

    <ImageView
        android:id="@+id/iv_skip_next"
        android:layout_width="@dimen/item_notification_small_skip_next_width"
        android:layout_height="@dimen/item_notification_small_skip_next_height"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_skip_next_white" />

    <ImageView
        android:id="@+id/iv_fast_forward"
        android:layout_width="@dimen/item_notification_small_fast_forward_width"
        android:layout_height="@dimen/item_notification_small_fast_forward_height"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_fast_forward_white" />
</LinearLayout>